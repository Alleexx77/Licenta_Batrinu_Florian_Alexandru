<aura:component controller="RequestQualificationController" implements="flexipage:availableForAllPageTypes,force:appHostable" access="global">
    <aura:attribute name="qualifications" type="List" />
    <aura:attribute name="selectedQualification" type="String" />
    <aura:attribute name="accountId" type="String" />
    <aura:attribute name="contactId" type="String" />
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />

    <div class="slds-m-around_medium">
        <h1 class="slds-text-heading_large">Request Qualification</h1>
        <p>In order to be able to answer to opened tenders, you must gain the required qualification. For each qualification requested, you must complete the corresponding questionnaires. Please feel free to attach file whenever required or appropriate.</p>

        <lightning:select name="qualification" label="Request Qualification" value="{!v.selectedQualification}">
            <option value="">--None--</option>
            <aura:iteration items="{!v.qualifications}" var="qual">
                <option value="{!qual}">{!qual}</option>
            </aura:iteration>
        </lightning:select>

        <lightning:button label="Next" onclick="{!c.handleNext}" class="slds-m-top_medium"/>
    </div>
</aura:component>
